package BoletinesProgramacion.Boletin7.Boletin7_3;

import javax.swing.*;

public class Boletin7_3 {
    public static void main(String[] args) {
        int num;

        num= Integer.parseInt(JOptionPane.showInputDialog("Introduzca un número"));

        if(num<=0){
            if(num==0){
                JOptionPane.showMessageDialog(null, "É cero.");

            }else
                JOptionPane.showMessageDialog(null,"É negativo.");
        }else
            JOptionPane.showMessageDialog(null, "É positivo");
    }
}
