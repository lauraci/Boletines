package BoletinesProgramacion.Boletin2.Boletin2_5;

import java.util.Scanner;

public class Boletin2_5 {

    public static void main(String[] args) {
        float millas;
        float METROS=1852;

        Scanner teclado= new Scanner (System.in);

        System.out.println("Introduzca las millas que quiera convertir a metros: ");
        millas= teclado.nextFloat();

        System.out.println(millas+ " millas son "+ METROS*millas+ " metros.");
    }
}
